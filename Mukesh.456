<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Alpine.js Product List</title>
        <script src="https://cdn.jsdelivr.net/npm/alpinejs@2.8.2/dist/alpine.min.js" defer></script>
        <link rel="stylesheet" href="28feb.css">
        <style>
        
            .star.filled {
                color: green; 
            }

            .star.empty {
                color: gray; 
            }
        </style>
    </head>

    <body>
        <div x-data="productList()" x-init="init()" class="container">
            <template x-for="product in products" :key="product.id">
                <div class="product-card">
                    <div class="image-section">
                        <div class="image-header  ">
                            <p x-text="product.title  + ' (' + product.id + ')'" ></p>
                        </div>
                        <div class="image-container">
                             <img :src="product.thumbnail" alt="Product Image">
                        </div>
                    </div>
                    <div class="details-section">
                        <div class="row1">
                             <p x-text="'title: ' + product.title"></p>
                        </div>
                        <div>
                            <template x-for="n in 5 " :key="product.id">
                                <span :class ="n <= Math.floor(product.rating) ? 'star filled' : 'star empty'">
                                    â˜…
                                </span>
                            </template>
                            <p x-text="'Price: $' + product.price"></p>
                    </div> 
                </div>
            </template>
        </div> 
        <script>
            function productList() {
                return {
                    products: [], 
                    init() {
                        fetch("https://dummyjson.com/products/") 
                            .then(response => response.json())
                            .then(data => {
                                console.log(data); 
                                this.products = data.products.slice(0, 6); 
                            })
                            .catch(error => console.error("Error fetching products:", error));
                    }
                };
            }
        </script>
    </body>
</html> 

container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
    margin-top: 10px;
}

.product-card {
    display: flex;
    width: 200px;
    height: 380px; 
    border: 1px solid black;
    margin: 10px;
    overflow: hidden;
    border-radius: 1px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    flex-direction: column; 
   
}

.image-name-section {
    display: flex; 
    width: 100%;
    padding: 10px;  
}

.image-container {
    width: 56%;
    height: 400px;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
}

.image-container img {
    width: 100%; 
    height: 100%; 
    object-fit: cover; 
}

.image-header { 
    width: 81%; 
    height:80px;
    padding-left: 2px;
    text-align: left ;
    font-size:34px; 
    font-weight: bold;
    display: flex;
    flex-direction:column;
    justify-content: center;
    border: 1px solid black; background-color: aqua;
    
}

.details-section {
    width: 100%;
    padding: 20px;
    display: flex;
    flex-direction: column;
    
}

.details-section p {
    margin: 5px 0;
    font-size: 46px;
}

.details-section .title {
    font-weight: bold;
    font-size: 100px;
}

.details-section .description {
    font-size: 2222px;
    margin-top: 10px;
}
